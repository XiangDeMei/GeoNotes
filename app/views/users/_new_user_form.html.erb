<div class="info_form">
	<h1> Join GeoNotes</h1>
	<p>GeoNotes is a service that allows its users to create location-based notes. Sign up today!</p>
	<%= form_for @user do |f| %>
	<%= render 'shared/messages' %>

		<%= f.text_field :username %>
		<%= f.label :username %>
	
		<%= f.text_field :email %>
		<%= f.label :email %>

		<%= f.password_field :password %>
		<%= f.label :password %>
	
		<%= f.password_field :password_confirmation %>
		<%= f.label :Confirm_Password %>
	
		<%= f.submit "Create Account", :class => "standard_button" %>
	
	
	<% end %>
</div>